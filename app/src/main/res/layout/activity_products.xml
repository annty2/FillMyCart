<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductsActivity">

    <TextView
        android:id="@+id/categoryText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="קטגוריות"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        />


    <LinearLayout
        android:id="@+id/linear1_layout"
        android:layout_width="402dp"
        android:layout_height="86dp"
        android:layout_below="@+id/categoryText"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="10sp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fruit_veg"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="ירקות\nופירות"
            android:textAlignment="center"
            android:textSize="23sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/milk_eggs"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:text="מוצרי חלב\nוביצים"
            android:textAlignment="center"
            android:textSize="23sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bread"
            android:layout_width="124dp"
            android:layout_height="wrap_content"
            android:text="מאפיה ובית\n לחם"
            android:textAlignment="center"
            android:textSize="23sp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear2_layout"
        android:layout_width="405dp"
        android:layout_height="90dp"
        android:layout_below="@+id/linear1_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/frozen"
            android:layout_width="149dp"
            android:layout_height="80dp"
            android:text="מזון מקורר,\n קפוא"
            android:textAlignment="center"
            android:textSize="23sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/meat_chicken_fish"
            android:layout_width="127dp"
            android:layout_height="80dp"
            android:text="בשר עוף\n ודגים"
            android:textAlignment="center"
            android:textSize="23sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Canning"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="בישול אפיה\n ושימורים"
            android:textAlignment="center"
            android:textSize="23sp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear3_layout"
        android:layout_width="399dp"
        android:layout_height="90dp"
        android:layout_below="@+id/linear2_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/drinks"
            android:layout_width="112dp"
            android:layout_height="103dp"
            android:text="משקאות, אלכוהול\n ויין"
            android:textAlignment="center"
            android:textSize="23sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/candy"
            android:layout_width="185dp"
            android:layout_height="98dp"
            android:text="דגנים, קרקרים וחטיפים"
            android:textAlignment="center"
            android:textSize="23sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Cleaners"
            android:layout_width="112dp"
            android:layout_height="98dp"
            android:text="ניקיון וחד\n פעמי"
            android:textAlignment="center"
            android:textSize="23sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear4_layout"
        android:layout_width="398dp"
        android:layout_height="84dp"
        android:layout_below="@+id/linear3_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cosmetics"
            android:layout_width="140dp"
            android:layout_height="80dp"
            android:text="איפור ובישום"
            android:textAlignment="center"
            android:textSize="23sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/shampo"
            android:layout_width="151dp"
            android:layout_height="80dp"
            android:text="סבון,שמפו\n ומרכך"
            android:textAlignment="center"
            android:textSize="23sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sales"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:text="מבצעים"
            android:textAlignment="center"
            android:textSize="23sp"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>